{
    "name": "No Seen – for Facebook and Instagram",
    "description": "Blocks \"seen\" marks on Facebook Messenger and Instagram Stories.",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["index.js"]
    },
    "options_ui": {
        "page": "preferences.html"
    },
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "*://*.facebook.com/*",
        "*://*.instagram.com/*"
    ],
    "developer": {
        "name": "Diéssica Gurskas",
        "url": "https://diessi.ca"
    },
    "applications": {
        "gecko": {
            "id": "no-seen@no.seen"
        }
    }
}